{
  "typescript": {
    "deno": true,
    "useTabs": false,
    "module.sortExportDeclarations": "caseInsensitive",
    "module.sortImportDeclarations": "caseInsensitive"
  },
  "json": { "deno": true, "useTabs": false },
  "markdown": { "deno": true, "textWrap": "always", "lineWidth": 100 },
  "toml": { "useTabs": false },
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json,jsonc,md,toml,dockerfile,rs,yml,yaml}"
  ],
  "rustfmt": {
    "edition": "2021",
    "version": "Two",
    "max_width": 100,
    "unstable_features": true,
    "newline_style": "Unix",
    "tab_spaces": 2,
    "hard_tabs": false,
    "imports_granularity": "Item",
    "imports_layout": "HorizontalVertical",
    "reorder_imports": true,
    "group_imports": "StdExternalCrate",
    "reorder_modules": true,
    "format_code_in_doc_comments": true,
    "normalize_comments": true,
    "wrap_comments": true,
    "condense_wildcard_suffixes": true,
    "force_multiline_blocks": true,
    "format_macro_matchers": true,
    "format_strings": true,

    "reorder_impl_items": true,
    "use_field_init_shorthand": true
  },
  "excludes": [
    "**/dist",
    ".devenv/**",
    "**/fixtures",
    "**/snapshots",
    "target/**"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.80.2.wasm",
    "https://plugins.dprint.dev/json-0.17.0.wasm",
    "https://plugins.dprint.dev/markdown-0.15.2.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/rustfmt-0.6.2.json@886c6f3161cf020c2d75160262b0f56d74a521e05cfb91ec4f956650c8ca76ca",
    "https://plugins.dprint.dev/exec-0.3.5.json@d687dda57be0fe9a0088ccdaefa5147649ff24127d8b3ea227536c68ee7abeab",
    "https://plugins.dprint.dev/prettier-0.19.0.json@f2ca8ddf0a5d7eca344681f54a9280250727324d09475f201fa2584faa2300c5"
  ]
}
